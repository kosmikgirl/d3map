{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["es-419", "zh-Hans"],
  "inputFiles": ["./src/**/*.ts"],
  "output": {
    "mode": "runtime",
    "outputDir": "./src/data/i18n/locale/generated",
    "localeCodesModule": "./src/data/locale-codes.ts"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "./src/data/i18n/locale"
  }
}